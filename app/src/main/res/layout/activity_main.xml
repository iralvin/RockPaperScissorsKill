<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="@mipmap/menubackground">


    <!--<TextView-->
        <!--android:id="@+id/RPSHeader"-->
        <!--android:text="@string/gameTitle"-->
        <!--android:textSize="30sp"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_centerInParent="true"-->
        <!--android:layout_above="@+id/vscpubutton"-->
        <!--android:layout_marginBottom="25dp"/>-->

    <Button
        android:id="@+id/vscpubutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/oneplayer"
        android:textStyle="bold"
        android:textSize="30sp"
        android:onClick="onePlayer"
        android:layout_centerInParent="true"
        android:textColor="#d3d3d3"
        android:shadowColor="#000000"
        android:shadowDx="-5"
        android:shadowDy="5"
        android:shadowRadius="2"
        android:background="@null"
        android:padding="2dp"
        />

    <Button
        android:id="@+id/vsplayerbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/twoplayer"
        android:textStyle="bold"

        android:textSize="30sp"
        android:onClick="twoPlayer"
        android:layout_centerInParent="true"
        android:layout_below="@+id/vscpubutton"
        android:textColor="#d3d3d3"
        android:shadowColor="#000000"
        android:shadowDx="-5"
        android:shadowDy="5"
        android:shadowRadius="2"
        android:background="@null"
        android:padding="2dp"
        />

    <Button
        android:id="@+id/settingsbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vsplayerbutton"
        android:layout_centerInParent="true"
        android:text="@string/settings"
        android:textStyle="bold"
        android:textSize="30sp"
        android:onClick="settings"
        android:textColor="#d3d3d3"
        android:shadowColor="#000000"
        android:shadowDx="-5"
        android:shadowDy="5"
        android:shadowRadius="2"
        android:background="@null"
        android:padding="2dp"
        />

</RelativeLayout>
